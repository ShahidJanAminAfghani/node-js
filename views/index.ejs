<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="css/index.css">
    <script src="/javascript/weather.js"></script>


</head>

<body onload="update()">
    <div class="container-md">
        <!-- navagition bar -->
        <%- include("./partation/head.ejs") %>



            <!-- for container -->
            <div class="container-md">

                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7050661.956303697!2d69.34807160000001!3d30.3593034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38db52d2f8fd751f%3A0x46b7a1f7e614925c!2sPakistan!5e0!3m2!1sen!2s!4v1652790871568!5m2!1sen!2s"
                    width="100%" height="300px" maxheight="" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" style="margin:0px auto"></iframe>

            </div>

            <div class="container-md">
                <ul id="ul">
                    <li><input type="text" name="search" id="search"></li>
                    <li><button id="button" onclick="update()">Search</button></li>
                    <li id="show_hide" style="display:none;"> Please wait the data is loading..</li>
                </ul>
            </div>

            <br><br>
            <div class="card">

                <br>
                <div class="info">

                    <h2 id="temp">41 <sup>o</sup>C</h2>
                    <hr>
                    <br>
                    <table>
                        <tr>
                            <td>Country</td>
                            <td id="country">Pakistan</td>
                        </tr>
                        <tr>
                            <td>
                                Humidity
                            </td>
                            <td id="humidity">7</td>
                        </tr>
                        <tr>
                            <td>Fell Like</td>
                            <td id="fellslike">22 </td>
                        </tr>
                        <tr>
                            <td>
                                Local Time
                            </td>
                            <td id="localtime">22</td>
                        </tr>
                        <tr>
                            <td>
                                Date
                            </td>
                            <td id="date">

                            </td>
                        </tr>

                    </table>

                </div>
            </div>

